{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "noPropertyAccessFromIndexSignature": false,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@skeleton/api-client/*": ["libs/api-client/src/*"],
      "@skeleton/api-modules/*": ["libs/api-modules/src/*"],
      "@skeleton/common/*": ["libs/common/src/*"],
      "@skeleton/entities/*": ["libs/entities/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
